@model IEnumerable<ShopNoiThat.Models.LOAISANPHAM>
@{
    ViewBag.Title = "dsLoaiSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Quản lý loại sản phẩm</h2>
<style>
    .menutrang {
        text-align: right;
    }

    .menutrang li {
        display: inline;
    }
</style>
<a class="btn btn-success" href="@Url.Action("themLoaiSP","Admin")">Thêm loại sản phẩm</a>

<table class="table" style="margin-top:20px">
    <tr>
        <th>
            Mã loại sản phẩm
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiSP)
            </td>
            <td>
                <a class="btn btn-success" href="@Url.Action("xemSPTheoLoaiSP","Admin",new { id = item.MaLoaiSP })">Xem sản phẩm</a>
                <a class="btn btn-warning" href="@Url.Action("suaLoaiSP","Admin",new { id = item.MaLoaiSP })">Sửa</a>
                <a class="btn btn-danger" href="@Url.Action("xoaLoaiSP","Admin",new { id = item.MaLoaiSP })">Xóa</a>
            </td>
        </tr>
    }

</table>
